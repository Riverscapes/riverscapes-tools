{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "environment",
      "type": "pickString",
      "description": "Select an environment",
      "options": [
        "staging",
        "production"
      ],
      "default": "production"
    }
  ],
  "configurations": [
    {
      "name": "ü¶´ Monitor",
      "type": "python",
      "request": "launch",
      "module": "cybercastor.monitor",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "{env:CC_API_URL}",
        "{env:USERNAME}",
        "{env:PASSWORD}",
        // "--download_running",
        "--verbose"
      ]
    },
    {
      "name": "ü¶´ AddJob",
      "type": "python",
      "request": "launch",
      "module": "cybercastor.add_job",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "${workspaceFolder}/jobs/",
        "{env:CC_API_URL}",
        "{env:USERNAME}",
        "{env:PASSWORD}",
        "--verbose"
      ]
    },
    {
      "name": "üß∞‚¨áÔ∏è DUMP to SQLITE",
      "type": "python",
      "request": "launch",
      "module": "cybercastor.dump_all",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "{env:DATA_ROOT}/warehouse_report",
        "{env:CC_API_URL}",
        "{env:USERNAME}",
        "{env:PASSWORD}",
        "{env:DATA_ROOT}/huc10.gpkg",
        "${input:environment}",
        "--verbose"
      ]
    },
   {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
  ]
}