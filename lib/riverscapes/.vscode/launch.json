{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "environment",
      "type": "pickString",
      "description": "Select a RIVERSCAPES API environment",
      "options": [
        "staging",
        "production"
      ],
      "default": "production"
    },
    {
      "id": "cc_environment",
      "type": "pickString",
      "description": "Select a CYBERCASTOR API environment",
      "options": [
        "staging",
        "production"
      ],
      "default": "production"
    }
  ],
  "configurations": [
    {
      "name": "üì¶ Merge Projects Tool",
      "type": "debugpy",
      "request": "launch",
      "module": "riverscapes.merge-projects",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "{env:DATA_ROOT}/merge-projects",
      ]
    },    
    {
      "name": "üß∞‚¨áÔ∏è DUMP to SQLITE",
      "type": "debugpy",
      "request": "launch",
      "module": "riverscapes.dump_all",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "{env:DATA_ROOT}/warehouse_report/${input:environment}.gpkg",
        // "${input:cc_environment}",
        "production",
        "${input:environment}",
        "{env:DATA_ROOT}/huc10.gpkg",
        "--verbose"
      ]
    },  
    {
      "name": "EXPERIMENTAL - Scrape Projects",
      "type": "debugpy",
      "request": "launch",
      "module": "riverscapes.downloadFiles",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      //"1707030107,1707030107",
      "args": [
        "${input:environment}",
        "1707030107",
        "/workspaces/GISData/riverscapes/data_exchange_files/huc10_attributes.json",
        "{env:DATA_ROOT}/data_exchange_files",
        "{env:DATA_ROOT}/data_exchange_files/rme_scrape_v1.gpkg",
        "/workspaces/GISData/watershed_boundaries/huc10_reference/huc10_conus.shp",
        "--verbose",
      ]
    },
    {
      "name": "EXPERIMENTAL WRITE VBET Synth Project File",
      "type": "debugpy",
      "request": "launch",
      "module": "riverscapes.scraper_project",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "{env:DATA_ROOT}/data_exchange_files/vbet_scrape.gpkg",
        "Philip Bailey"
      ]
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
  ]
}