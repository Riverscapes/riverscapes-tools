{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "WatershedID",
      "description": "What Watershed ID?",
      "default": "1706030607" // Really small HUC
    },
    {
      "type": "promptString",
      "id": "HydroID",
      "description": "Pick a HydroID to process",
      "default": "330456"
    },
    {
      "type": "promptString",
      "id": "WatershedHydroID",
      "description": "Pick a WatershedHydroID to process",
      "default": "563738"
    }
  ],  
  "configurations": [
    {
      "name": "RS Context - NEW ZEALAND",
      "type": "debugpy",
      "request": "launch",
      "module": "rscontextnz.rs_context_nz",
      "console": "integratedTerminal",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "${input:WatershedID}",
        "{env:NATIONAL_PROJECT}/outputs/hydrography.gpkg",
        "{env:NATIONAL_PROJECT}/outputs/topography/dem_south.tif",
        "{env:NATIONAL_PROJECT}/outputs/topography/dem_north.tif",
        "{env:DATA_ROOT}/rs_context/${input:WatershedID}",
        "{env:DOWNLOAD_FOLDER}",
        "--meta", "Runner=VSCode",
        // "--temp_folder", "{env:DOWNLOAD_FOLDER}/tmp",
        // "--force",
        "--verbose",
        "--debug"
      ]
    },
    {
      "name": "Calculate Level Paths",
      "type": "debugpy",
      "request": "launch",
      "module": "scripts.calc_level_path",
      "console": "integratedTerminal",
      "args": [
        "/Users/philipbailey/GISData/nz/nz_national_project2/hydrography/NZREC2_v5_Hydrography.gpkg",
        "${input:WatershedHydroID}",
        "False"
      ]
    },
    {
      "name": "Traverse Network",
      "type": "debugpy",
      "request": "launch",
      "module": "scripts.traverse_network",
      "console": "integratedTerminal",
      "args": [
        "/Users/philipbailey/GISData/nz/nz_national_project2/hydrography/NZREC2_v5_Hydrography.gpkg",
        "${input:HydroID}"
      ]
    },
  ]
}