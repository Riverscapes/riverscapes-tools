{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "WatershedHydroID",
      "description": "Pick a WatershedHydroID to process",
      // "default": "563738" // South Island near Christchurch
      "default": "586561" // North Island near Waikato
    }
  ],  
  "configurations": [
    {
      "name": "RS Context - NEW ZEALAND",
      "type": "debugpy",
      "request": "launch",
      "module": "rscontextnz.rs_context_nz",
      "console": "integratedTerminal",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "env": {
        "NATIONAL_PROJECT_NZ": "/workspaces/data/NationalDatasetsNZ"
      },
      "args": [
        "${input:WatershedHydroID}",
        "{env:NATIONAL_PROJECT_NZ}/hydrography/hydrography.gpkg",
        "{env:NATIONAL_PROJECT_NZ}/topography/lidar.gpkg",
        "{env:NATIONAL_PROJECT_NZ}/topography/NORTH_ISLAND_8m.tif",
        "{env:NATIONAL_PROJECT_NZ}/topography/SOUTH_ISLAND_8m.tif",
        "{env:DATA_ROOT}/rs_context/${input:WatershedHydroID}",
        "--dem_resolution", "5",
        "--verbose",
        "--debug"
      ]
    },
    {
      "name": "Calculate Level Paths",
      "type": "debugpy",
      "request": "launch",
      "module": "scripts.calc_level_path",
      "console": "integratedTerminal",
      "args": [
        "/Users/philipbailey/GISData/nz/nz_national_project2/hydrography/hydrography.gpkg",
        "${input:WatershedHydroID}",
        "True"
      ]
    },
    {
      "name": "Traverse Network",
      "type": "debugpy",
      "request": "launch",
      "module": "scripts.traverse_network",
      "console": "integratedTerminal",
      "args": [
        "/Users/philipbailey/GISData/nz/nz_national_project2/hydrography/hydrography.gpkg",
        "${input:HydroID}"
      ]
    },
    {
      "name": "Build LiDAR Tiles",
      "type": "debugpy",
      "request": "launch",
      "module": "scripts.build_lidar_tiles",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "{env:LINZ_API_KEY}",
        "/Users/philipbailey/GISData/nz/nz_national_project2/topography/lidar.gpkg",
      ]
    }
  ]
}