{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "HUC",
      "description": "What HUC?",
      // "default": "17070202" // North Fork John Day
      "default": "17060304" // Really small HUC
      // "default": "17060103" // Asotin
    },
    {
      "type": "promptString",
      "id": "CHANNEL",
      "description": "path to channel lines or polygon"
    },
    {
      "type": "promptString",
      "id": "DEM",
      "description": "path to DEM"
    },
    {      
      "type": "promptString",
      "id": "EPSG",
      "description": "EPSG code",
      "default": "4326"}
  ],
  "configurations": [
    {
      "name": "Run TauDEM",
      "type": "python",
      "request": "launch",
      "module": "taudem.taudem",
      "console": "integratedTerminal",
      "args": [
        "${input:HUC}",
        "{env:DATA_ROOT}/channel_area/${input:HUC}/outputs/channel_area.gpkg/channel_area",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/topography/dem.tif",
        "{env:DATA_ROOT}/taudem/${input:HUC}",
        //"--mask",
        //"{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/hydrology.gpkg/mask",
        "--meta",
        "Runner=VSCode",
        "--verbose",
        //"--debug"
      ]
    },
    {
      "name": "Run TauDEM Custom",
      "type": "python",
      "request": "launch",
      "module": "taudem.taudem",
      "console": "integratedTerminal",
      "args": [
        "${input:HUC}",
        "${input:CHANNEL}",
        "${input:DEM}",
        "{env:DATA_ROOT}/taudem/${input:HUC}",
        //"--mask",
        //"{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/hydrology.gpkg/mask",
        "--epsg",
        "${input:EPSG}",
        "--meta",
        "Runner=VSCode",
        "--verbose",
        //"--debug"
      ]
    },
    {
      "name": "Version Bump",
      "type": "python",
      "module": "taudem.version",
      "args": [
        "${workspaceFolder}/taudem/__version__.py"
      ],
      "request": "launch",
      "console": "integratedTerminal"
    },
    {
      "name": "Augment XML",
      "type": "python",
      "request": "launch",
      "module": "taudem.taudem_rs",
      "console": "integratedTerminal",
      "args": [
        "{env:DATA_ROOT}/taudem/${input:HUC}/project.rs.xml",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/project.rs.xml,{env:DATA_ROOT}/rs_context/${input:HUC}/project.rs.xml,{env:DATA_ROOT}/channel_area/${input:HUC}/project.rs.xml"
      ]
    },
  ]
}