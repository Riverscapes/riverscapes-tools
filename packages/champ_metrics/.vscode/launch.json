{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
   "inputs": [
    {
      "type": "promptString",
      "id": "visitID",
      "description": "Which Visit ID?",
      "default": "0687"
    }
  ],  
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "CHaMP Metrics",
      "type": "debugpy",
      "module": "champ_metrics.champ_metrics",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "${input:visitID}",
        "{env:DATA_ROOT}/champ/workbench.db",
        "{env:DATA_ROOT}/champ/topo_projects/${input:visitID}/project.rs.xml",
        "{env:DATA_ROOT}/champ/metrics/${input:visitID}"
      ],
      "request": "launch",
      "console": "integratedTerminal"
    },
    {
      "name": "BATCH CHaMP Metrics",
      "type": "debugpy",
      "module": "champ_metrics.champ_metrics_batch",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "{env:DATA_ROOT}/champ/workbench.db",
        "{env:CSV_FOLDER}",
        "{env:DATA_ROOT}/project_download",
        "{env:DATA_ROOT}/champ/metrics"
      ],
      "request": "launch",
      "console": "integratedTerminal"
    }
  ]
}