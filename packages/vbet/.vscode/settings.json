{
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
  },
  "pylint.args": [
    "--extension-pkg-whitelist=scipy",
    "--ignore=E501",
    "--max-line-length=240"
  ],  
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": ["../../lib/commons"],
  "files.exclude": {
    "**/*.egg-info": true
  },
  "files.watcherExclude": {
    "**/*.egg-info/**": true
  },
  "search.exclude": {
    "**/*.egg-info": true
  },
}