{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "HUC",
      "description": "What HUC?",
      // "default": "17070202" // North Fork John Day
      "default": "17060304" // Really small HUC
      // "default": "17060103" // Asotin
    }
  ],  
  "configurations": [
    {
      "name": "Version Bump",
      "type": "python",
      "module": "rscommons.version",
      "args": [
        "${workspaceFolder}/channel/__version__.py"
      ],
      "request": "launch",
      "console": "integratedTerminal"
    },
    {
      "name": "Channel Area Tool",
      "type": "python",
      "request": "launch",
      "module": "channel.channel",
      "console": "integratedTerminal",
      // Add NATIONAL_PROJECT, INPUTS_FOLDER, DOWNLOAD_FOLDER to your .env file
      "args": [
        "${input:HUC}",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/NHDFlowline.shp",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/NHDArea.shp",
        "{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/NHDWaterbody.shp",
        "{env:DATA_ROOT}/channel_area/${input:HUC}", // output folder
        "--bankfull_function", "0.177 * (a ** 0.397) * (p ** 0.453)",
        "--bankfull_function_params", "a=TotDASqKm",
        "--reach_code_field", "FCode",
        "--flowline_reach_codes", "55800,33400,46000,46003,46006,46007",
        "--flowarea_reach_codes", "53700,31800,34300,34305,34306,43100,46000,46003,46006,46007,46100,48400",
        "--waterbody_reach_codes", "49300,39000,39001,39004,43600,43617,46600,46601,46602",
        "--prism_data", "{env:DATA_ROOT}/rs_context/${input:HUC}/climate/precipitation.tif",
        "--huc8boundary", "{env:DATA_ROOT}/rs_context/${input:HUC}/hydrology/WBDHU8.shp",
        "--meta", "Runner=VSCode",
        "--verbose",
        //"--debug"
      ]
    },       
  ]
}


